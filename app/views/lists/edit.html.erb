<div class="row">
  <div class="border rounded mx-auto p-5 col-md-6 col-12 mt-5">

    <%= form_with model:@list, local:true do |f| %>
    
      <div class="field form-group">
        <h4>スポット</h4>
        <%= f.text_field :spot_name, class: "form-control col-md-8 col-12 mx-auto" %>
      </div>
      
      <div class="field form-group">
        <h4>住所</h4>
        <%= f.text_field :address, class: "form-control col-md-8 col-12 mx-auto" %>
      </div>
    
      <div class="field form-group">
        <h4>URL</h4>
        <%= f.text_field :site_url, class: "form-control col-md-8 col-12 mx-auto" %>
      </div>
      
      <div class="field form-group">
        <h4>comment</h4>
        <%= f.text_area :comment, class: "form-control col-md-8 col-12 mx-auto" %>
      </div>
    
      <%= f.submit '保存', class: "btn btn-outline-dark pl-5 pr-5 mb-5" %>
    
    <% end %>

  </div>
</div>
