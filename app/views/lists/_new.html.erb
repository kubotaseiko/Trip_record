<div class="container text-center mt-2">
  <%= form_with model:list, url:'/lists', method: :post, local:true do |f| %>

    <div class="field form-group">
      <h4>スポット</h4>
      <%= f.text_field :spot_name, class: "form-control col-md-6 col-12 mx-auto" %>
    </div>

    <div class="field form-group">
      <h4>住所</h4>
      <%= f.text_field :address, class: "form-control col-md-6 col-12 mx-auto" %>
    </div>

    <div class="field form-group">
      <h4>URL</h4>
      <%= f.text_field :site_url, class: "form-control col-md-6 col-12 mx-auto" %>
    </div>

    <div class="field form-group">
      <h4>comment</h4>
      <%= f.text_area :comment, class: "form-control col-md-6 col-12 mx-auto" %>
    </div>

    <%= f.submit '投稿', class: "btn btn-outline-dark pl-5 pr-5 mb-5" %>

  <% end %>
</div>