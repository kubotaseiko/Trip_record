<div class='page_title'>Trips</div>
<!--------trip検索-------->
<div class="form-inline">
  <div class="form-group mx-auto m-2">
    <%= form_with url: trips_search_path, method: :get, class: 'mx-auto', local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword, placeholder: "ワードを入力して検索", class: "form-control" %>
      <button type="submit" class="ml-2 btn btn-outline-dark">
        <i class="fas fa-search" aria-hidden="true"></i>
      </button>
    <% end %>
  </div>
</div>
<!--------trip投稿-------->
<div class="content">
  <a class="js-modal-open btn btn-outline-primary" href="">Tripを投稿</a>
</div>
<div class="modal js-modal">
    <div class="modal__bg js-modal-close"></div>
    <div class="modal__content">
        <%= render 'trips/new', trip: @trip %>
        <a class="js-modal-close" href="">閉じる</a>
    </div>
</div>
<!--------一覧表示-------->
<% if @trips.length == 0 %>
  <div class="border rounded-pill p-5 col-md-6 col-12 mx-auto mt-2">
    該当がありません
  </div>
<% end %>

<% @trips.each do |trip| %>
  <div class="border rounded-pill p-3 col-md-6 col-12 mx-auto m-2">
    <div class="content_font">
      <%= link_to trip_path(trip.id) do %>
        <%= trip.location %>
      <% end %>
    </div>
    <div class="detail_font">
      <%= trip.starts_at.strftime('%Y/%m/%d') %> ～ <%= trip.ends_at.strftime('%Y/%m/%d') %>
    </div>
  </div>
<% end %>

