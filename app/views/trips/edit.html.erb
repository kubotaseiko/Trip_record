  <div class="row">
    <div class="border rounded mx-auto p-5 col-md-6 col-12 mt-5 ">
    
    <%= form_with model:@trip, local:true do |f| %>
    
      <div class="field form-group">
        <h4>旅行先</h4>
        <%= f.text_field :location, class: "form-control col-12 mx-auto" %>
      </div>
        
      <div class="field form-group">
        <h4>期間</h4>
        <span><%= f.datetime_field :starts_at, placeholder: "XXXX-XX-XX", class: "form-control" %> ~ </span>
        <span><%= f.datetime_field :ends_at, placeholder: "XXXX-XX-XX", class: "form-control" %></span><br>
      </div>
      
      <div class="field form-group">
        <h4>comment</h4>
        <%= f.text_area :comment, class: "form-control col-12 mx-auto" %>
      </div>
    
      <%= f.submit '保存', class: "btn btn-outline-dark pl-5 pr-5 mb-5" %>
    
    <% end %>

  </div>
</div>