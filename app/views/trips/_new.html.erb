<%= form_with model:trip, local:true do |f| %>

  <div class="field form-group">
    <h4>旅行先</h4>
    <%= f.text_field :location %>
  </div>
  
  <div class="field form-group">
    <h4>期間</h4>
    <span><%= f.datetime_field :starts_at, placeholder: "XXXX-XX-XX"%> ~ </span>
    <span><%= f.datetime_field :ends_at, placeholder: "XXXX-XX-XX"%></span><br>
  </div>
  
  <div class="field form-group">
    <h4>comment</h4>
    <%= f.text_area :comment %>
  </div>
  
  <%= f.submit '投稿' %>

<% end %>