<div class="row">
  <div class="border rounded mx-auto p-5 col-md-6 col-12 mt-5">

    <h2>新規会員登録</h2>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control col-md-6 col-12 mx-auto" %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6 col-12 mx-auto" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-6 col-12 mx-auto" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-6 col-12 mx-auto" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-outline-dark col-6 mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

