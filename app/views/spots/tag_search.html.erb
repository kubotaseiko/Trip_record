<h4>[<%= "#{@tag.tag_name}" %>]の投稿一覧</h4>

<% @spots.each do |spot| %>
 <div class='border rounded p-3 col-12 mx-auto m-2'>

<div class="content_font">
  <%= spot.spot_name %>
</div>

<%= spot.address %>
<%= spot.comment %>

<% spot.post_images.each do |image| %>
  <%= attachment_image_tag image, :image ,:fill, 200, 200 %>
<% end %>


<% end %>